<!DOCTYPE html>
<head lang="en">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">	
	<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

	<style>
	</style>

</head>

<body>
	
	<div class="row">
		<div class="col-sm-3">

			<div id="u1" class="form-group">
				<input type="text" class="form-control" id="username" pattern=".{4,}" autofocus></input>
				<span id="u2" class=""></span>
			</div>

			<div id="p1" class="form-group">		
				<input type="password" class="form-control" id="password" pattern=".{4,}"></input>
				<span id="p2" class=""></span>
			</div>			
			
			<button ID="submit" class="btn btn-default">Submit</button>&nbsp;&nbsp;
			<input type="checkbox" id="Check01" title="Remember Me"></input>

		</div>
			
	</div>
	
	<script>

		var u = 0;
		var p = 0;

		$("#username").keyup(function(){
		
			if($("#username")[0].checkValidity()==true || username.value != "" || username.value != null){
				u = 1;
			} else{
				u = 0;
			}
		});

		$("#password").keyup(function(){
			
			if($("#password")[0].checkValidity()==true){
				p = 1;
			} else{
				p = 0;
			}
		});

		$("#submit").click(function(){
			var check = u + p; alert(check);
			if(check != 2){
				
				if(u!=1){
					$("#u1").addClass("has-error has-feedback");
					$("#u2").addClass("glyphicon glyphicon-remove form-control-feedback");
				} else{
					$("#u1").removeClass("has-error has-feedback");
					$("#u2").removeClass("glyphicon glyphicon-remove form-control-feedback");
				}
				
				if(p!=1){
					$("#p1").addClass("has-error has-feedback");
					$("#p2").addClass("glyphicon glyphicon-remove form-control-feedback");
				} else{
					$("#p1").removeClass("has-error has-feedback");
					$("#p2").removeClass("glyphicon glyphicon-remove form-control-feedback");
				}
			
			} else{
				
				$("#u1").removeClass("has-error has-feedback");
				$("#u2").removeClass("glyphicon glyphicon-remove form-control-feedback");
				
				$("#p1").removeClass("has-error has-feedback");
				$("#p2").removeClass("glyphicon glyphicon-remove form-control-feedback");
				
				alert("submit");
				
			}
			
		});

	</script>

</body>
</html>
